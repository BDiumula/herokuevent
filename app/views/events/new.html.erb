<html>
<head>
	<title>Bienvenue sur Eventbride by THP</title>
</head>
<body>
	<h1>Créer ton event </h1><br>
	<%= form_for @event do |f| %> 
	<div class="form-group">
		<label>Titre de l'évènement</label>
		<%= f.text_field :title, class: 'form-control'%> 
	</div>
	<div class="form-group">
		<label>description de l'évènement</label>
		<%= f.text_area :description, class: 'form-control'%> 
	</div>
	<div class="form-group">
		<button type="submit", class="btn btn-primary">Créer le gossip</button>
	</div>
	<% end %>
</body>
</html>

